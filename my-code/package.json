{
  "name": "frontend-challenge-significa",
  "version": "1.0.0",
  "description": "frontend challenge to Significa, built with nextjs",
  "author": "cleyson leal braga",
  "private": true,
  "scripts": {
    "dev": "next dev src",
    "build": "next build src",
    "start": "next start src",
    "test": "jest",
    "test-watch": "yarn test --watch --notify",
    "test-coverage": "yarn test --coverage",
    "lint": "eslint . --ext js --fix",
    "prettier": "prettier --write '**/*.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier  --write",
      "jest --bail --findRelatedTests --detectOpenHandles",
      "git add"
    ],
    "**/*.css": [
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "axios": "^0.21.0",
    "classnames": "^2.2.6",
    "dotenv": "^8.2.0",
    "next": "^10.0.2",
    "next-images": "^1.6.2",
    "postcss-custom-media": "^7.0.8",
    "postcss-import": "^12.0.1",
    "postcss-nesting": "^7.0.1",
    "postcss-preset-env": "^6.7.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "cssnano-webpack-plugin": "^1.0.3",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-transform-file": "^1.1.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.2.0"
  }
}
